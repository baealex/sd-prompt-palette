{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "target": "ES5",
        "paths": {
            "~/*": [
                "./*"
            ],
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "scripts/**/*",
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}